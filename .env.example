LEMONSQUEEZY_WEBHOOK_SECRET=your_lemonsqueezy_webhook_secret
LEMONSQUEEZY_VARIANT_PRO_MONTHLY=your_pro_monthly_variant_id
LEMONSQUEEZY_VARIANT_PRO_YEARLY=your_pro_yearly_variant_id
